<!DOCTYPE html>
<html>
  <head>
    <title>document</title>
    <%- include('templates/file') %>
  </head>
  <body>
    <div class="login-box" >
        <form class="form-horizontal" id="loginForm" method="POST" action="/users/login">
            <div class="form-group" >
                <label for="inputEmail3" class="control-label">Username</label>
                <div class="">
                    <input  class="form-control" id="username" placeholder="Username" name="username">
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="">Password</label>
                <div class="">
                    <input type="password" class="form-control" id="password" placeholder="Password" name="password">
                </div>
            </div>
            <div class="form-group">
                <div >
                    <div >
                        <label for="verifycode" class="control-label">验证码</label>
                        <div class="">
                            <input  class="form-control" id="verifycode" placeholder="Verifycode" name="verifycode">
                        </div>
                        <img src="/users/verifycode" alt="" id="codeImg">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="container">
                    <div class="row">
                        <div class="col-8">
                            <input type="checkbox"> Remember me
                        </div>
                        <div class="col-4">
                            <a href="/register">注册帐号</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="offset-3 col-6">
                    <button type="submit" class="btn btn-primary">Sign in</button>
                </div>
            </div>
        </form>
    </div>

    <script>
        var $username = $("#username");
        var $password = $("#password")
        $("#codeImg").click(function(){
            console.log(11)
            $("#codeImg").attr('src','/users/verifycode?id='+Math.random());
        })
        $("#loginForm").submit(function(){
            if($username.val().trim()===""||$password.val().trim()===""){
                alert("用户名和密码不能为空");
                return false;
            }
        })
    </script>
  </body>
</html>
