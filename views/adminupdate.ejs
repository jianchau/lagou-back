<!DOCTYPE html>
<html>
  <head>
    <title>document</title>
    <%- include('templates/file')%>
  </head>
  <body>
    <%- include('templates/header')%>
    <div class="container-fluid">
      <div class="row" id="content">
        <%- include('templates/menu',{big:'first'}) %>
        <div class="main-right col-10 nav-right">
          <%- include('templates/breadcrumb',{breadcru:[{link:'/admin',title:'首页'},{link:'/adminedit/:page',title:'职位管理'},{link:'/adminupdate',title:'职位修改'}]})%>
          <div class="offset-3 col-6">
            <form action="/admin/postupdate/<%- info._id%>" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                  <label>职位名称</label>
                  <input type="text" class="form-control" name="postName" value="<%= info.postName%>" >
                </div>
                <div class="form-group">
                    <label>职位地点</label>
                    <input type="text" class="form-control" name="postCity" value="<%= info.postCity%>">
                </div>
                <div class="form-group">
                  <label>薪资范围</label>
                  <select class="form-control" name="postMoney">
                    <option <%= info.postMoney == '不限' ? 'selected' : '' %>   value="不限" >不限</option>
                    <option <%= info.postMoney == '5K以下' ? 'selected' : '' %> value="5K以下" >5K以下</option>
                    <option <%= info.postMoney == '5K以下' ? 'selected' : '' %> value="5K-10K" >5K-10K</option>
                    <option <%= info.postMoney == '5K以下' ? 'selected' : '' %> value="10K-15K">10K-15K</option>
                    <option <%= info.postMoney == '5K以下' ? 'selected' : '' %> value="15K-25K">15K-25K</option>
                    <option <%= info.postMoney == '5K以下' ? 'selected' : '' %> value="25K以上">25K以上</option>
                  </select>
                </div>
                <div class="form-group">
                  <label>工作年限</label>
                  <select class="form-control" name="postYear">
                    <option <%= info.postYear == '不限' ? 'selected' : '' %>    value="不限">不限</option>
                    <option <%= info.postYear == '1年以下' ? 'selected' : '' %> value="1年以下">1年以下</option>
                    <option <%= info.postYear == '1-3年' ? 'selected' : '' %>   value="1-3年">1-3年</option>
                    <option <%= info.postYear == '3-5年' ? 'selected' : '' %>   value="3-5年">3-5年</option>
                    <option <%= info.postYear == '5年以上' ? 'selected' : '' %> value="5年以上">5年以上</option>
                  </select>
                </div>
                <div class="form-group">
                  <label>最高学历</label>
                  <select class="form-control" name="postEdu">
                    <option <%= info.postEdu == '不限' ? 'selected' : '' %> value="不限">不限</option>
                    <option <%= info.postEdu == '专科以上' ? 'selected' : '' %> value="专科以上">专科以上</option>
                    <option <%= info.postEdu == '本科以上' ? 'selected' : '' %> value="本科以上">本科以上</option>
                    <option <%= info.postEdu == '研究生以上' ? 'selected' : '' %> value="研究生以上">研究生以上</option>
                  </select>
                </div>
                <div class="form-group">
                    <label>公司名称</label>
                    <input type="text" class="form-control" name="companyName" value="<%= info.companyName%>">
                </div>
                <div class="form-group">
                    <label class="btn btn-primary">公司Logo
                    <input type="file" class="d-none" name="companyLogo" id="companyLogo"></label>
                    <img id="companyImg" class="logo-img" src="<%= info.companyLogo%>" alt="">
                </div>
                <div class="form-group">
                  <label>职位信息</label>
                  <textarea class="form-control" rows="7" name="postMessage">value="<%= info.postMessage%>"</textarea>
                </div>
                <div>
                    <input type="submit" class="btn btn-primary" value="修改">
                </div>
            </form>
          </div>
        </div> 
      </div>
    </div>
  </body>
</html>
